<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/mtrl_card_spacing"
    android:layout_marginTop="@dimen/mtrl_card_spacing"
    android:layout_marginRight="@dimen/mtrl_card_spacing"
    android:layout_gravity="center"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_offset"
            android:layout_marginRight="@dimen/text_offset"
            android:layout_marginTop="@dimen/text_offset"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            tools:text="Title"
            />

        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_offset"
            android:layout_marginRight="@dimen/text_offset"
            android:textSize="@dimen/body_text_size"
            tools:text="Description"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_offset"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/meta_text_size"
                tools:text="17.08.2018"/>

            <TextView
                android:id="@+id/text_view_source"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/meta_text_size"
                tools:text="Onliner.by"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>